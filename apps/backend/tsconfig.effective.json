{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "typeRoots": [
            "../../node_modules/@types",
            "./generated/prisma"
        ],
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "strictBuiltinIteratorReturn": true,
        "alwaysStrict": true,
        "useUnknownInCatchVariables": true
    },
    "files": [
        "./src/app.ts",
        "./src/index.ts",
        "./src/config/env.ts",
        "./src/routes/auth.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "C:/Users/Monaa/OneDrive/Desktop/coding/projects/spotify-clone/apps/backend/dist"
    ]
}
